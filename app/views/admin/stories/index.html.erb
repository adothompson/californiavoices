<% content_for :side do %>

<%= render :partial => 'admin/shared/admin_menu' %>

<% end %>

<div class="white_box blue_top">
    <h1>Stories</h2>

    <%= will_paginate @results %>
    <% @results.each do |s| %>
    <div class="<%= cycle('odd','even') %> search_row">
      <div class="left"><%= clipping(s, :medium) %></div>
      <div><%= link_to h(s.title), s %></div>
      <div><%= link_to 'edit details', edit_admin_story_path(s) %></div>
      <div><%= link_to 'edit clippings', admin_story_clippings_path(s) %></div>
      <div><%= link_to_remote "#{ s.active ? 'deactivate' : 'activate' }", {:url => formatted_activate_admin_story_path(s, 'js'), :method => :put}, {:id => s.dom_id('link')} %></div>
      <div class="clear"></div>
    </div>
    <% end %>
    <div class="clear"></div>
    <%= will_paginate @results %>
</div>
