<% color = cycle('shade-odd', 'shade-even') -%>
<%# author_style = "background: url(#{avatar_url_for(post.user,'small')}) no-repeat top right;" -%>
<tbody id="<%=post.dom_id%>">
<tr class="post-spacer-top <%= color %> <%= @posts.first == post ? 'post-border-top' : ''%> ">
  <td colspan="2">
    <a name="<%= post.dom_id %>">&nbsp;</a>
  </td>
</tr>
<tr class="post <%= color %>">
  <td>
    <div class="post-author" style="<%#author_style%>">
      <div class='username'><%= link_to post.user.f, profile_path(post.user.profile) %></div>
      <div class='date'><%= time_ago_in_words post.created_at %> ago</div>   
    </div>
  </td>
  <td class="post-body" id="post-body-<%= post.id %>">
    <%= render :partial => 'posts/post_body', :locals => {:post => post}  %>   
  </td>
</tr>
<tr class="post-spacer-bottom <%= color %>"><td colspan="2">&nbsp;</td></tr>
</tbody>
