<%
   terms_of_service_label = "Accept #{link_to 'Terms of Service', tos_path, :target => 'blank'}"
   %>

<div class="blue_box">
  <div id="login_form">
    <% less_form_for :user, :url => signup_path, :method => :post do |f| 	%>
    <h2 class='underline'><%= "Sign-up Now" %></h2>
    
    <div class="instruction">Welcome to <%= SITE_NAME %>, we are currently in private beta.</div>
    
    <div class="instruction"><%= link_to "I already have an account.", login_url %></div>

    <%= f.text_field :login %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation, :label => 'Confirm Password' %>
    <% f.wrap nil, :label=>"" do  %> 
    <div class="row">    
      <%= captcha_field(:user)  unless RAILS_ENV == 'test'%>
    </div>
    <% end %>  
    
    <%= f.front :terms_of_service, :label => terms_of_service_label %>
    <%= check_box_tag :user_terms_of_service, 1, params[:terms_of_service], :class => 'checkbox', :name => 'user[terms_of_service]' %>
  </div>

  <%= f.wrap(:remember_me, :for => :remember_me){ check_box_tag :remember_me, 1, params[:remember_me], :class=>"checkbox"} %>
  <div class="button">
    <%= f.submit 'Sign-up Now', :class => 'button' %>
  </div>
  <% end %>
</div>
