<div id="posts">

  <%- if !@show_reply -%>
    <%= link_to_function "Add Comment" + ARROW, "Element.show('reply_container'); Element.hide('show_reply_link')", :class => 'small_icon page_discussion_16 p', :id=>'show_reply_link' %>
  <%- end -%>

  <table border="0" cellspacing="0" cellpadding="0" class="posts">
    <%= will_paginate @posts %>

    <%- for post in @posts do -%>
      <%= render :partial => 'posts/post', :locals => {:post => post} %>
    <%- end -%>

    <%= will_paginate @posts %>

    <%= render :partial => 'posts/reply' %>
  </table>

</div>
